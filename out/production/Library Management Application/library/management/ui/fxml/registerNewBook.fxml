<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextFlow?>

<StackPane fx:id="rootPane" stylesheets="@../../../../../resources/ui/css/pastel-theme.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.management.ui.controllers.RegisterNewBookController.registerNewBookController">
   <children>
      <VBox prefHeight="569.0" prefWidth="802.0" spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <TextFlow prefHeight="22.0" prefWidth="782.0">
               <children>
                  <Label text="Add Books">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
               </children>
            </TextFlow>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10.0">
               <children>
                  <ButtonBar prefHeight="80.0" prefWidth="140.0">
                     <buttons>
                        <Label text="Title Of Book" />
                     </buttons>
                  </ButtonBar>
                  <TextField id="titleField" prefHeight="30.0" prefWidth="571.0" promptText="Enter the title of the book here..." HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10.0">
               <children>
                  <ButtonBar prefWidth="140.0">
                     <buttons>
                        <Label text="Author Name" />
                     </buttons>
                  </ButtonBar>
                  <TextField id="authorField" promptText="Enter the name of author for the book here..." HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10.0">
               <children>
                  <ButtonBar prefWidth="140.0">
                     <buttons>
                        <Label text="Description of Book" />
                     </buttons>
                  </ButtonBar>
                  <TextArea prefWidth="626.0" promptText="Enter few lines about the book here" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefWidth="200.0" spacing="10.0">
               <children>
                  <ButtonBar prefHeight="29.0" prefWidth="140.0">
                     <buttons>
                        <Label text="Category" />
                     </buttons>
                  </ButtonBar>
                  <ComboBox id="categoryComboBox" prefWidth="150.0" promptText="Select category.." HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <ButtonBar prefWidth="140.0">
                     <buttons>
                        <Label id="numberField" prefHeight="18.0" prefWidth="103.0" text="Number Of Issue" />
                     </buttons>
                  </ButtonBar>
                  <TextField promptText="How many issues are there?" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
               <children>
                  <ButtonBar prefHeight="40.0" prefWidth="200.0" />
                <Button mnemonicParsing="false" onAction="#handleAddBooks" text="Add Books" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
