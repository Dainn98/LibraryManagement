<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
  xmlns:fx="http://javafx.com/fxml"
  fx:controller="library.management.ui.controllers.ManageBookLoansController">
  <VBox spacing="10" style="-fx-border-color: lightgray; -fx-border-width: 1; -fx-padding: 10;">
    <Label text="Issue a new Book" style="-fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
      <Label text="Student ID"/>
      <ComboBox fx:id="studentIdComboBox" promptText="Enter the student code here" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

      <Label text="Book ID" GridPane.rowIndex="1"/>
      <TextField fx:id="bookIdTextField" promptText="Enter the document code here" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

      <Button text="Issue Book" GridPane.rowIndex="2" GridPane.columnIndex="1" style="-fx-background-color: #333; -fx-text-fill: white;"/>
    </GridPane>
  </VBox>

  <VBox spacing="10" style="-fx-border-color: lightgray; -fx-border-width: 1; -fx-padding: 10;">
    <Label text="Return a Book" style="-fx-font-weight: bold;"/>
    <GridPane hgap="10" vgap="10">
      <Label text="Book ID"/>
      <TextField fx:id="returnBookIdTextField" promptText="Enter the document code here" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

      <Button text="Return Book" GridPane.rowIndex="1" GridPane.columnIndex="1" style="-fx-background-color: #333; -fx-text-fill: white;"/>
    </GridPane>
  </VBox>

</VBox>
