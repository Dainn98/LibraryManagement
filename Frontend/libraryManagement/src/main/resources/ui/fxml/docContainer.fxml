<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="docCatalogView" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="330.0" prefWidth="180.0" stylesheets="@../css/myTheme.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="library.management.ui.controllers.DocContainerController">
   <children>
      <StackPane styleClass="image-view">
         <children>
            <VBox fx:id="docInfo" focusTraversable="true" onMouseExited="#handleExitDesDoc" onMousePressed="#handlePressDocInfo" prefHeight="200.0" prefWidth="100.0" visible="false">
               <children>
                  <Label fx:id="desDoc" text="Hello, my name is Tuan Anh. I'm a sophomore in Unv" wrapText="true" VBox.vgrow="ALWAYS" />
               </children>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </VBox>
            <ImageView fx:id="docThumbnail" fitHeight="240.0" fitWidth="160.0" onMouseEntered="#handleEnterDocThumbnail" onMousePressed="#handlePressDocInfo" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../sprites/mainScreen.png" />
               </image>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </ImageView>
         </children>
      </StackPane>
      <VBox spacing="5.0" VBox.vgrow="ALWAYS">
         <children>
            <Hyperlink fx:id="docTitleCatalog" onMousePressed="#handlePressDocInfo" prefHeight="24.0" prefWidth="168.0" text="Hyperlink" textAlignment="CENTER" />
            <Label fx:id="authorCatalog" text="Label" VBox.vgrow="ALWAYS">
               <padding>
                  <Insets left="5.0" />
               </padding></Label>
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
